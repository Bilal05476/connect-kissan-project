<!DOCTYPE html>
<html lang="en">
<head>
    {{>header}}
    <title>Connect Kissan | Dashboard</title>
</head>
<body>
    {{>navbar}}
    <div class="dashboard">
    <div class="left-board">
        <div class="user-info">
        <h6>
            Your Name: <strong>{{user.name}}</strong>
            &nbsp;&nbsp;
            Your DealerShip: <strong>{{user.dealer}}</strong>
        </h6> 
        </div>
        <form class="item-form" action="/api/items" method="post">
            <h2>Add your Item:</h2>
           <input id="item-name" type="text" placeholder="Item name.." required="true" />
            <textarea id="item-desc" rows="4" type="text" placeholder="Item description.." required="true" ></textarea>
            <input id="item-type" type="text" placeholder="Item type.." required="true" />
            <input id="item-price" type="text" placeholder="Item price.." required="true" />
            <input type="file" id="img" id="item-img" accept="image/*">
            <button class="add-item" type="submit">Add Item</button>
        </form>
        
    </div>

    <div class="right-board">
        <div class="user-items">
            <h2>Your Items:</h2>
           
        </div>
        <div class="logout-div">
            <a class="logout" href="/logout">Logout</a>
        </div>
        
    </div>
    </div>
    <script src="js/script.js"></script>
</body>
</html>